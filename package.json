{
  "name": "vcpe-ui",
  "version": "0.1.0",
  "description": "A UI component library for quickly building VC and PE investment business platforms",
  "sideEffects": [
    "*.css"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "files": [
    "lib",
    "es",
    "hooks",
    "icons",
    "index.css",
    "colors.css",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "require": "./lib/index.js",
      "import": "./es/index.js",
      "node": "./lib/index.js",
      "default": "./es/index.js"
    },
    "./hooks": {
      "types": "./es/hooks/index.d.ts",
      "require": "./lib/hooks/index.js",
      "import": "./es/hooks/index.js",
      "node": "./lib/hooks/index.js",
      "default": "./es/hooks/index.js"
    },
    "./colors.css": "./colors.css",
    "./index.css": "./index.css"
  },
  "scripts": {
    "start": "run-p dev:*",
    "dev:css": "rm -rf src/**/*.scss.d.ts && typed-scss-modules src -w -L error",
    "dev:docs": "PORT=5188 dumi dev",
    "build:js": "rollup -c",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir es -p tsconfig.build.json",
    "build": "npm run clean && run-p build:*",
    "clean": "find . -type f -name '*.scss.d.ts' -exec rm -f {} + && rm -rf ./lib ./es ./index.css",
    "docs:build": "dumi build",
    "test": "jest",
    "lint": "run-p stylelint eslint",
    "stylelint": "stylelint 'src/**/*.scss'",
    "eslint": "eslint --ext .tsx --ext .ts src --max-warnings 0",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "cz": "git add . && cz",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "prepublishOnly": "npm run build",
    "canary": "npm version prerelease --ignore-scripts --preid=rc && npm publish --tag rc"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.6",
    "clsx": "^1.2.1",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@popperjs/core": "^2.11.6",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@scdt-china/eslint-config-scc": "^1.8.1",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.1.2",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.8",
    "autoprefixer": "^10.4.12",
    "axios": "^1.1.3",
    "cheerio": "1.0.0-rc.12",
    "commitizen": "^4.2.5",
    "commitlint": "^17.1.2",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "dumi": "2.0.3",
    "eslint": "^8.25.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "jest-sonar": "^0.2.12",
    "lint-staged": "^13.2.2",
    "mime-types": "^2.1.35",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0",
    "postcss-scss": "^4.0.5",
    "prettier": "^2.8.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^3.2.3",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.55.0",
    "stylelint": "^14.13.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "tippy.js": "^6.3.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typed-scss-modules": "^7.1.0",
    "typescript": "^5.1.3",
    "uuid": "^9.0.0",
    "webpack": "^5.78.0"
  },
  "lint-staged": {
    "*.scss": [
      "npm run stylelint"
    ],
    "*.ts?(x)": [
      "npm run eslint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "pnpm": {
    "overrides": {
      "generic-names@4.0.0>loader-utils": "3.2.1",
      "tsconfig-paths@3.14.1>json5": "1.0.2",
      "query-string@6.14.1>decode-uri-component": "0.2.1"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "browserslist": [
    "defaults"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cht527/vcpe-ui.git"
  },
  "keywords": [
    "component"
  ],
  "author": "cht527",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cht527/vcpe-ui/issues"
  },
  "homepage": "https://github.com/cht527/vcpe-ui#readme"
}
